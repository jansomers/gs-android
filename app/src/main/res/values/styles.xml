<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/GenderInput</item>
    </style>
    <!--Theme used for the login application-->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!--Button Styles-->
    <style name="LoginButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>
    <style name="ViewButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextColor</item>
    </style>


    <!--Input Styles-->
    <style name="LoginInput" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GenderInput" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="NewExamInput" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlNormal">@color/colorTextColor</item>
        <item name="android:colorControlHighlight">@color/colorTextColorLight</item>
        <item name="android:colorControlActivated">@color/colorTextColorLight</item>
    </style>
    <!-- Text Appearance Styles-->
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.Authentication.Progress" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ActionBarDropDownItems" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary300</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Subtitle</item>
        <item name="android:drawablePadding">4dp</item>
    </style>



</resources>
