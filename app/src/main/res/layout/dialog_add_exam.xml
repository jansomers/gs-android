<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/gs_usernameWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/NewExamInput"
            app:hintTextAppearance="@style/TextAppearance.App.Authentication.Progress">

            <EditText
                android:id="@+id/new_exam_identification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/examIdentification"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorTextColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/gs_protocolWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/NewExamInput"
            app:hintTextAppearance="@style/TextAppearance.App.Authentication.Progress">

            <EditText
                android:id="@+id/new_exam_accesscode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/accessCode"
                android:inputType="textPassword"
                android:textColor="@color/colorTextColor" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_exam_error_msg"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:textColor="@color/colorError"
            />
    </LinearLayout>

</LinearLayout>